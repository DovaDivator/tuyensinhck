{
  "compilerOptions": {
    "target": "es2019",                     
    "module": "commonjs",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "lib": ["es2019", "dom"],               
    "resolveJsonModule": true
  },
  "include": ["src", "src/types"],
  "exclude": ["src/**/*.js", "dist", "node_modules"]
}
